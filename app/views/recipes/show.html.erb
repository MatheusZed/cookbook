<h1>Informacoes sobre a receita: <%= @recipe.name %></h1>

<dl>
    <dt>
      <strong>Nome: </strong><%= @recipe.name %>
    </dt>

    <dd>
      <strong>Tipo da receita: </strong><%= @recipe.recipe_type.name if @recipe.recipe_type %>
    </dd>

    <dd>
      <strong>Culinaria: </strong><%= @recipe.cuisine.name if @recipe.cuisine %>
    </dd>

    <dd>
      <strong>Ingredientes: </strong><%= @recipe.ingredients %>
    </dd>

    <dd>
      <strong>Modo de preparo: </strong><%= @recipe.cook_method %>
    </dd>

    <dd>
      <strong>Tempo de preparo: </strong><%= @recipe.cook_time %>
    </dd>

    <dd>
      <strong>Status: </strong><%= @recipe.status %>
    </dd>
</dl>

<% if @recipe.draft? %>
  <%= button_to 'Publicar', publish_recipe_path, { method: 'patch' } %>
<% else %>
  <%= button_to 'Rascunho', publish_recipe_path, { method: 'patch' } %>
<% end %>
