<!DOCTYPE html>
<html>
  <head>
    <title>Coockbook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <li>
          <%= link_to 'Home', root_path %>
        </li>
        <li>
          <%= link_to 'Cadastrar nova receita', new_recipe_path %>
        </li>        
        <li>
          <%= link_to 'Cadastrar novo tipo de receita', new_recipe_type_path %>
        </li>
        <li>
          <%= link_to 'Cadastrar nova Culinaria', new_cuisine_path %>
        </li>
      </ul>
    </nav>
    <main>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
      <%= yield %>
    </main>    
  </body>
</html>
